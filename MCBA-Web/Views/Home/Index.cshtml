@{ ViewData["Title"] = "Home"; }

<div>
    <h1 class="display-4">Most Common Bank of Australia</h1>

    <div class="text-left">
        <p>Hello and welcome to the Most Common Bank of Australia, where we don't actually exist!</p>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Chart.css" />
}

<h1> Transactions Made Each Month </h1>

<div class="container">
    <canvas id="transactionChart"></canvas>    
</div>

<h1> Transactions by Type </h1>
<div class="container">
    <canvas id="transactionTypeChart"></canvas>
</div>
@section Scripts {
    <script src="~/js/chart.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/chartjs-adapter-moment.js"></script>
    <script>
        var canvas = document.getElementById("transactionChart").getContext("2d");

        $.get("/Data/TransactionsPerMonthByAccount", function (transactionDates) {
            const labels = [];
            const data = [];
            for (const x of transactionDates) {
                labels.push(x.month);
                data.push(x.count);
            }

            const transactionChart = new Chart(canvas, {
                type: "bar",
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Transactions",
                        data: data,
                        backgroundColor: "rgba(255, 99, 132, 0.2)",
                        borderColor: "rgba(255, 99, 132, 1)",
                        borderWidth: 1
                    }]
                },

            });
        });
    </script>

    <script>
        var canvas2 = document.getElementById("transactionTypeChart").getContext("2d");

        $.get("/Data/TransactionsPerTypeByAccount", function (transactionTypes) {
            const labels = [];
            const data = [];
            for (const x of transactionTypes) {
                labels.push(x.month);
                data.push(x.count);
            }

            const transactionTypeChart = new Chart(canvas2, {
                type: "pie",
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Transactions",
                        data: data,
                        backgroundColor: ["red", "blue", "green", "orange", "white"],
                        borderColor: "rgba(255, 99, 132, 1)",
                        borderWidth: 1
                    }]
                },

            });
        });
    </script>
}