@model MCBA_Web.ViewModels.DepositViewModel
@{
    ViewData["Title"] = "Deposit";
}

<h1 class="display-4">Account Number @Model.AccountNumber (@Model.Account.AccountType)</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
           <partial name="_AccountInputs"/>


            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
