@model MCBA_Web.ViewModels.AddBillViewModel
@using MCBA_Models.Models; 
@{
    ViewData["Title"] = "Add Payment";
}

<h1 class="display-4">Account Number @Model.AccountNumber </h1>
<h5>
    Edit Details
</h5>
<form class="col-md-4" asp-action="AddPayment">

    <div class="form-group">
        <label asp-for="PayeeID" class="control-label"></label>
        <input asp-for="PayeeID" class="form-control" value="" />
        <span asp-validation-for="PayeeID" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" value="@Model.Amount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="radio" name="Period" checked="checked" value="@Period.OneOff" /> Once Off <br />
    <input type="radio" name="Period" value="@Period.Annually" /> Annual <br />
    <input type="radio" name="Period" value="@Period.Quarterly" /> Quarterly <br />
    <input type="radio" name="Period" value="@Period.Monthly" /> Monthly <br />

    <div class="form-group">
        <label asp-for="ScheduleTimeUtc" class="control-label"></label>
        <input asp-for="ScheduleTimeUtc" class="form-control" value="@DateTime.UtcNow.ToString()" />
        <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
